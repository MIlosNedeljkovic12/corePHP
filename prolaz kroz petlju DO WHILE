<body>
    <h1>DO...WHILE petlja</h1>
    <?php
    $n=-5;
    $brojac=0;
    do{
        echo "Prolazak kroz petlju: {$n}<br>";
        $n++;
        $brojac++;
    }while($n<5);
    echo "Broj prolazaka kroz petlju je: {$brojac}<br>";
    ?>
</body>

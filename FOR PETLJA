    <h1>FOR petlja</h1>
    <?php
    $suma=0;
    for($i=0;$i<=100;$i++)
    {
        $suma+=$i;
    }
    echo "Suma je: {$suma}<br>";
    ?>
    <hr>
    <?php
    $suma=0;
    $i=0;
    for(;$i<=100;)
    {
        $suma+=$i;
        $i++;
    }
    echo "Suma je: {$suma}<br>";
    ?>

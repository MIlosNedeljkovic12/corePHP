<?php
$sati=mt_rand(0,23);
if($sati<8)
{
    $bs="black";
    $pb="white";
}
else if($sati>=8 and $sati<18)
{
    $bs="white";
    $pb="black";
}
else
{
    $bs="black";
    $pb="white";
}
?>
<body style='color:<?php echo $bs?>; background-color: <?php echo $pb?>'>
<h1>Index 4</h1>
    <?php echo "Trenutno vreme je $sati sati<br>";?>
    
